{
  "compilerOptions": {
    "outDir": "dist/server",
    "noEmit": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "client", "vite.config.ts", "server/vite.ts", "server/serveStatic.ts", "**/*.test.ts", "**/*.spec.ts"]
}